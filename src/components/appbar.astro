---
import { Image } from "astro:assets";
import Logo from "../assets/logo.gif";
const base = import.meta.env.BASE_URL;
---

<nav>
    <ul class="info">
        <li><Image src={Logo} alt="" /></li>
        <li class="name">
            <strong>MayorTom4815</strong><br /><p>A Programmer and artist</p>
        </li>
    </ul>
    <ul>
        <li>
            <details class="dropdown">
                <summary role="button"><i class="bi bi-list"></i></summary>

                <ul dir="rtl">
                    <li>
                        <a href={`${base}`}
                            >About Me <i class="bi bi-file-person-fill"></i></a
                        >
                    </li>

                    <li>
                        <a href={`${base}projects`}
                            >My projects <i class="bi bi-suitcase-lg-fill"
                            ></i></a
                        >
                    </li>

                    <li>
                        <a href={`${base}music`}
                            >My Music <i class="bi bi-vinyl-fill"></i></a
                        >
                    </li>
                </ul>
            </details>
        </li>
    </ul>
</nav>

<style>
    nav {
        position: sticky;
        margin: 0px 5vw;
        top: 0;

        z-index: 99;

        .info {
            animation: ShowOut linear both;
            animation-timeline: scroll();
            animation-range: 0px 50px;
        }
    }

    img {
        border-radius: 5px;
        width: 8vh;
    }

    details summary::after {
        display: none;
    }

    @keyframes ShowOut {
        to {
            translate: -100px 0px;
            opacity: 0;
        }
    }
</style>
